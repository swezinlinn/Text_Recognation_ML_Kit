<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/drawerLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
   <TextView android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:textColor="@color/colorPrimary"
             android:textSize="16sp"
             app:layout_constraintBottom_toTopOf="@id/imageView"
             android:id="@+id/txv_result"/>
   <TextView android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toBottomOf="@+id/txv_result"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:textColor="@color/colorAccent"
             android:textSize="12sp"
             app:layout_constraintBottom_toTopOf="@id/imageView"
            android:id="@+id/txv_error"/>

   <ImageView
           app:layout_constraintTop_toBottomOf="@+id/txv_error"
           app:layout_constraintBottom_toTopOf="@id/btn_click"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:id="@+id/imageView" android:layout_width="200dp" android:layout_height="200dp"/>
   <Button android:id="@+id/btn_click"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintEnd_toEndOf="parent"
           android:text="Click"
           app:layout_constraintTop_toBottomOf="@+id/imageView"
           app:layout_constraintBottom_toBottomOf="parent"
           android:layout_marginEnd="8dp"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"/>
</androidx.constraintlayout.widget.ConstraintLayout>